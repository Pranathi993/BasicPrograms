public class ArmstrongNumber {
	public static void main(String[] args) {
  int a = 152;
  int rem, result=0;
  int b=a;
  
  while (a>0) { 
	  rem = a%10;
	  result = (rem*rem*rem)+result;
	  a=a/10;
      b=a;
  }  
  
  if(b==a) {
	 System.out.println("it is a armstrong number");
  }
  else {
	  System.out.println("it is not a armstrong number");
    }
  }
}
